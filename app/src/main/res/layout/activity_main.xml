<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context="telesoftas.rangebartest.MainActivity">

    <telesoftas.rangebartest.bar.RangePicker
        android:id="@+id/barsWithThumbs"
        android:layout_width="339dp"
        android:layout_height="33dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        custom:barHeight="2dp"
        custom:innerColor="@color/medium_turquoise"
        custom:layout_constraintBottom_toBottomOf="parent"
        custom:layout_constraintEnd_toEndOf="parent"
        custom:layout_constraintLeft_toLeftOf="parent"
        custom:layout_constraintRight_toRightOf="parent"
        custom:layout_constraintStart_toStartOf="parent"
        custom:layout_constraintTop_toTopOf="parent"
        custom:outerColor="@color/dark_grey"
        custom:thumbColor="@color/medium_turquoise"
        custom:thumbRadius="8dp" />

    <TextView
        android:id="@+id/textStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        custom:layout_constraintLeft_toLeftOf="@+id/barsWithThumbs"
        custom:layout_constraintTop_toBottomOf="@+id/barsWithThumbs"
        tools:text="First" />

    <TextView
        android:id="@+id/textEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        custom:layout_constraintRight_toRightOf="@+id/barsWithThumbs"
        custom:layout_constraintTop_toBottomOf="@+id/barsWithThumbs"
        tools:text="Second" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="278dp"
        android:layout_height="35dp"
        style="@style/AppTheme.SpinnerStyle"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        custom:layout_constraintBottom_toTopOf="@+id/barsWithThumbs"
        custom:layout_constraintEnd_toEndOf="@+id/barsWithThumbs"
        custom:layout_constraintStart_toStartOf="@+id/barsWithThumbs"
        custom:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>